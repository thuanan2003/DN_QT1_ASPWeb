@page
@model DN_QT1_ASPWeb.Pages.CustomerModel
@{
	ViewData["Title"] = "Customer";
}
<div>
	<h1>List of Customer</h1>
	<div class="col-6">
		<a asp-page="CreateCustomer" class="btn btn-primary">Create New Customer</a>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>CustID</th>
				<th>CustName</th>
				<th>Address</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var cust in Model.custParameterList)
			{
				<tr>
					<td> @cust.CustID</td>
					<td> @cust.CustName</td>
					<td> @cust.Address</td>
						<td>
						<div class="w-75 btn-group" role="group">
							<a asp-page="EditCustomer" asp-route-id="@Model.cust.CustID" name="CustID" value="@Model.cust.CustID" class="btn btn-primary mx-2">
								Edit
							</a>

							<a asp-page="DeleteCustomer" asp-route-id="@Model.cust.CustID" name="CustID" value="@Model.cust.CustID" class="btn btn-danger mx-2">
								Delete
							</a>
						</div>
						</td>
				</tr>
			}
		</tbody>
	</table>
</div>